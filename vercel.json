{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    { "src": "/api/upload-image", "dest": "/api/upload-image.ts" },
    { "src": "/api/upload-pdf", "dest": "/api/upload-pdf.ts" },
    { "src": "/api/upload-video", "dest": "/api/upload-video.ts" },
    { "src": "/api/upload-audio", "dest": "/api/upload-audio.ts" },
    { "src": "/api/webhook/n8n", "dest": "/api/webhook/n8n.ts" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)\\.(.+)$", "dest": "/$1.$2" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
